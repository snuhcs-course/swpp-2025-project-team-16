<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient_dark"
    tools:context=".ui.fragments.login.LoginPasswordFragment">

    <!-- Outer Glow -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="3dp"
        android:background="@drawable/card_glow_outer">

        <!-- Center Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="22dp"
            android:backgroundTint="@color/surface_dark_translucent"
            app:strokeColor="@color/cyan_20"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="25dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/cyan_bright" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textColor="@color/gold"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's get back to exercise"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="28dp" />

                <!-- Password Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/cyan_bright" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/cyan_bright"
                    app:boxStrokeWidth="3dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxBackgroundColor="@color/input_bg_stronger"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/cyan_bright"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your password"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:inputType="textPassword"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="13sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Enter the Quest"
                    android:background="@drawable/btn_gradient_blue"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Incorrect password. Try again!"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</FrameLayout>
