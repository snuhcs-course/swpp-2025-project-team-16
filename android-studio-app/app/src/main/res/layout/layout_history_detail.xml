<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_translucent"
    android:padding="20dp">

    <!-- ===== Header ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDayTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tuesday, October 28"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- ===== Daily Summary ===== -->
    <TextView
        android:id="@+id/tvDailySummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excellent execution! Your form was impeccable."
        android:textColor="@color/cyan_bright"
        android:textSize="14sp"
        android:paddingVertical="8dp"
        android:textStyle="bold" />

    <!-- ===== Summary Section ===== -->
    <LinearLayout
        android:id="@+id/summaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

        <!-- ===== XP Box ===== -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:background="@drawable/bg_badge_gold"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:radius="16dp">

            <!-- 아이콘 + 라벨 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/ivXpIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="#FFB800"
                    android:src="@drawable/ic_trophy" />

                <TextView
                    android:id="@+id/tvXpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP Earned"
                    android:textSize="14sp"
                    android:textColor="#FFB800"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTotalXp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+250"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ===== Form Score Box ===== -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:background="@drawable/bg_badge_cyan"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/ivFormIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bolt" />

                <TextView
                    android:id="@+id/tvFormLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Score"
                    android:textSize="14sp"
                    android:textColor="@color/cyan_bright"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCompletion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- ===== Workout List ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/exercisedoneListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
