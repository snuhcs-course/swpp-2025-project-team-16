<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/scheduleFragment">
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.fitquest.app.ui.fragments.ScheduleFragment"
        android:label="Schedule">
        <action
            android:id="@+id/action_scheduleFragment_to_aiCoachFragment"
            app:destination="@id/aiCoachFragment">
            <argument
                android:name="scheduleId"
                app:argType="integer"
                android:defaultValue="-1"/>
            <argument
                android:name="activityKey"
                app:argType="string"
                android:defaultValue="squat"/>
            <argument
                android:name="repsTarget"
                app:argType="integer"
                android:defaultValue="-1"/>
            <argument
                android:name="durationTarget"
                app:argType="integer"
                android:defaultValue="-1"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/aiCoachFragment"
        android:name="com.fitquest.app.ui.fragments.AiCoachFragment"
        android:label="Session">
        <argument
            android:name="scheduleId"
            app:argType="integer"
            android:defaultValue="-1"/>
        <argument
            android:name="activityKey"
            app:argType="string"
            android:defaultValue="squat"/>
        <argument
            android:name="repsTarget"
            app:argType="integer"
            android:defaultValue="-1"/>
        <argument
            android:name="durationTarget"
            app:argType="integer"
            android:defaultValue="-1"/>
    </fragment>
</navigation>