<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar View Theme -->
    <style name="CalendarViewCustom" parent="Theme.MaterialComponents.DayNight">
        <item name="colorAccent">@color/cyan</item>
        <item name="colorPrimary">@color/gold</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:dayOfWeekBackground">@color/surface_dark</item>
        <item name="android:dayOfWeekTextAppearance">@style/CalendarDayOfWeekStyle</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderStyle</item>
    </style>

    <style name="CalendarDayOfWeekStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CalendarHeaderStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/gold</item>
    </style>
</resources>