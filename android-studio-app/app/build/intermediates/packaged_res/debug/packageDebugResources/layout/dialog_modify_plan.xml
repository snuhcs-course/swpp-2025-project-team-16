<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_back"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modify_plan"
                android:textColor="@color/foreground"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Current Plan Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_plan"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_current_plan_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Date"
                    android:textColor="@color/muted_foreground"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- New Date Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newDate"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp" />

                <CalendarView
                    android:id="@+id/calendar_view_new_date"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- New Time Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="새로운 시간대"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="11dp" />

                <RadioGroup
                    android:id="@+id/rg_new_time_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_new_morning"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="오전 (6:00 - 12:00)"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/rb_new_afternoon"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="오후 (12:00 - 18:00)"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/rb_new_evening"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="저녁 (18:00 - 24:00)"
                        android:textSize="15sp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_complete_edit"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:backgroundTint="@color/primary"
            android:text="수정 완료"
            android:textSize="15sp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</ScrollView>