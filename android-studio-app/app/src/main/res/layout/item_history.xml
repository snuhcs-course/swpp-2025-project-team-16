<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="3dp"
    android:background="@drawable/card_glow_outer">

    <!-- Inner Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/surface_dark_translucent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/cyan_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- 날짜 + 트로피 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Oct 23"
                    android:textSize="17sp"
                    android:textColor="@color/cyan_bright"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/gold" />
            </LinearLayout>

            <!-- 운동 요약 (한 줄) -->
            <TextView
                android:id="@+id/tvWorkoutSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Squats, Push-ups, Plank"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="10dp" />

            <!-- XP / 퍼센트 / 시간 배지 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:spacing="8dp">

                <TextView
                    android:id="@+id/tvXp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_gold"
                    android:text="+250 XP"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_cyan"
                    android:text="95%"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_gold"
                    android:text="35 m"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
