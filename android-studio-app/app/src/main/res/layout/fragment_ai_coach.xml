<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aiCoachRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.fragments.AiCoachFragment">

    <!-- ===== Header (top bar) ===== -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/gradient_overlay_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left text block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSystemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI TRAINING SYSTEM"
                android:textColor="@color/cyan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSystemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real-time Analysis"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Activity icon block -->
        <FrameLayout
            android:id="@+id/activityIconBox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/cyan_30"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/icActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:contentDescription="Activity indicator"
                app:tint="@android:color/white" />
        </FrameLayout>
    </LinearLayout>

    <!-- ===== Scrollable content below header ===== -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:clipToPadding="false">

            <!-- ===== 1. Exercise Selection Card ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExerciseSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_dark_translucent"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/cyan_30"
                app:strokeWidth="2dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/iconTarget"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_target"
                            android:contentDescription="Target icon"
                            app:tint="@color/cyan" />

                        <TextView
                            android:id="@+id/tvSelectExerciseLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Select Exercise"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Spinner for exercise -->
                    <Spinner
                        android:id="@+id/spinnerExercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@color/surface_dark"
                        android:padding="12dp"
                        android:background="@color/background_dark"
                        android:entries="@array/exercise_options"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                        tools:text="Push-ups" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== 2. Camera / Preview Card (with HUD overlays) ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/cyan_30"
                app:strokeWidth="4dp"
                app:cardElevation="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cameraCardRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- The previewWrapper enforces a 3:4 region -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/previewWrapper"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/background_dark"
                        android:keepScreenOn="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="3:4">

                        <!-- Camera preview + overlay -->
                        <FrameLayout
                            android:id="@+id/cameraContainer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.camera.view.PreviewView
                                android:id="@+id/cameraPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:keepScreenOn="true" />

                            <com.fitquest.app.ui.coachutils.OverlayView
                                android:id="@+id/overlay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="false"
                                android:importantForAccessibility="no"
                                android:visibility="gone" />
                        </FrameLayout>

                        <!-- HUD top overlays: Reps + XP -->
                        <LinearLayout
                            android:id="@+id/hudTopContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <!-- Rep Counter Card -->
                            <LinearLayout
                                android:id="@+id/repCounterCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:background="@color/gold"
                                android:layout_marginBottom="8dp"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/labelReps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="REPS"
                                        android:textColor="@color/background_dark"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvRepCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvCurrentExerciseEmoji"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’ª"
                                    android:textColor="@android:color/white"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <!-- XP Counter Card -->
                            <LinearLayout
                                android:id="@+id/xpCounterCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:background="@color/cyan_30"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/iconTrophy"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_trophy"
                                        android:contentDescription="Trophy"
                                        android:layout_marginEnd="6dp"
                                        app:tint="@color/gold" />

                                    <TextView
                                        android:id="@+id/labelXp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="XP Gained"
                                        android:textColor="@android:color/white"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvXpPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+0"
                                    android:textColor="@android:color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Form Quality bottom overlay -->
                        <LinearLayout
                            android:id="@+id/formScoreContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:layout_margin="16dp"
                            android:background="@color/surface_dark_translucent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/labelFormQuality"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Form Quality"
                                    android:textColor="@color/cyan"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/iconZap"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_zap"
                                        android:contentDescription="Power"
                                        app:tint="@color/gold" />

                                    <TextView
                                        android:id="@+id/tvFormScore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="0%"
                                        android:textColor="@android:color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressFormQuality"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:layout_marginTop="8dp"
                                app:indicatorColor="@color/cyan"
                                app:trackColor="@color/surface_dark"
                                app:trackCornerRadius="4dp" />
                        </LinearLayout>

                        <!-- Recording Indicator (ANALYZING badge) -->
                        <LinearLayout
                            android:id="@+id/recordingIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_margin="16dp"
                            android:background="@color/error_red"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@android:color/white" />

                            <TextView
                                android:id="@+id/tvAnalyzing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ANALYZING"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- ===== Countdown (on top of everything) ===== -->
                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="72sp"
                            android:shadowColor="@android:color/black"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="8"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== 3. AI Feedback Card ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/cyan_30"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/cyan"
                app:strokeWidth="2dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/cyan_20"
                        android:layout_marginEnd="12dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconActivitySmall"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_activity"
                            android:contentDescription="AI Coach icon"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAiCoachLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Coach"
                            android:textColor="@color/cyan"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Position yourself in frame"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            tools:text="Keep core engaged and drive knees out." />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== 4. Control Buttons (Begin/Pause, Camera toggle) ===== -->
            <LinearLayout
                android:id="@+id/controlButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Begin Training / Pause Training -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Begin Training"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/success_green"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="28dp" />

                <!-- Switch Camera -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleCamera"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Switch Camera"
                    android:textColor="@color/cyan"
                    app:backgroundTint="@color/surface_dark_translucent"
                    app:cornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/cyan_30"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="28dp" />
            </LinearLayout>

            <!-- ===== 5. Info Card ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_dark_translucent"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/gold"
                        android:layout_marginEnd="12dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconZapInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_zap"
                            android:contentDescription="Zap icon"
                            app:tint="@color/background_dark" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvInfoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Training System"
                            android:textColor="@color/gold"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvInfoDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced pose detection analyzes your movements in real-time, counts reps automatically, and provides instant form feedback. Earn XP for perfect execution!"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
