<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- FitQuest RPG Theme -->
    <style name="Theme.FitQuest" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/cyan</item>
        <item name="colorOnTertiary">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        
        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <!-- 둥근 모서리/배경 -->
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="backgroundTint">@color/surface_dark_translucent</item>
    </style>

</resources>
