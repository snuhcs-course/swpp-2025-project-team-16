<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_dark">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your form?"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- ✅ 여러 장 슬라이드용 ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerPosePhotos"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="4dp" />

    <!-- ✅ 페이지 인디케이터 (예: 1 / 3) -->
    <TextView
        android:id="@+id/tvPageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 1"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe to choose the best snapshot, then get a detailed pose evaluation."
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- ✅ Later 왼쪽, Evaluate 오른쪽 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Later" />

        <!-- 가운데를 채워주는 공간 -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluate" />
    </LinearLayout>
</LinearLayout>
