<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/primary_blue"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Exercise Icon -->
        <TextView
            android:id="@+id/tvExerciseIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ’ª"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Push-ups"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/tvExerciseIcon"
            app:layout_constraintStart_toEndOf="@id/tvExerciseIcon"
            app:layout_constraintEnd_toStartOf="@id/tvXpReward" />

        <!-- Sets and Reps -->
        <TextView
            android:id="@+id/tvSetsReps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 sets Ã— 10 reps"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvExerciseName"
            app:layout_constraintStart_toEndOf="@id/tvExerciseIcon"
            app:layout_constraintEnd_toStartOf="@id/tvXpReward" />

        <!-- XP Reward -->
        <TextView
            android:id="@+id/tvXpReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50 XP"
            android:textColor="@color/cyan"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Completion Checkbox (optional) -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:buttonTint="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
