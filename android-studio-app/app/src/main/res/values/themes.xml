<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AISportsPT" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/achievement_silver</item>
        <item name="colorPrimaryVariant">@color/achievement_silver</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#4D4D4D</item>
        <item name="colorSecondaryVariant">#4D4D4D</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.AISportsPT" parent="Base.Theme.AISportsPT" />
    
    <!-- 커스텀 버튼 스타일 -->
    <style name="Widget.AISportsPT.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.AISportsPT.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- 카드 스타일 -->
    <style name="Widget.AISportsPT.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    
    <!-- Chip 스타일 -->
    <style name="Widget.AISportsPT.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>