<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aiCoachRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.fragments.AiCoachFragment">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="6dp"
        android:background="@drawable/gradient_overlay_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSystemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI TRAINING SYSTEM"
                android:textColor="@color/cyan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSystemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start your session"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExerciseSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/surface_dark_translucent"
        app:cardCornerRadius="14dp"
        app:strokeColor="@color/cyan_30"
        app:strokeWidth="1dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/iconTarget"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_target"
                    app:tint="@color/cyan" />

                <TextView
                    android:id="@+id/tvSelectExerciseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Select Exercise"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerExercise"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/surface_dark"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@color/background_dark"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                tools:text="Push-ups" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/cyan_30"
        app:strokeWidth="2dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/cardExerciseSelect"
        app:layout_constraintBottom_toTopOf="@id/controlButtonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cameraCardRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/previewWrapper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:keepScreenOn="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintDimensionRatio="H,3:4">

                <FrameLayout
                    android:id="@+id/cameraContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_camera_round_16"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:clipToPadding="true">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/cameraPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:keepScreenOn="true" />

                    <com.fitquest.app.ui.coachutils.OverlayView
                        android:id="@+id/overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:importantForAccessibility="no"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/hudTopContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/repCounterCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@color/gold"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelReps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REPS"
                                android:textColor="@color/background_dark"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvRepCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCurrentExerciseEmoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’ª"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/xpCounterCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@color/cyan_30"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iconTrophy"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_trophy"
                                android:layout_marginEnd="6dp"
                                app:tint="@color/gold" />

                            <TextView
                                android:id="@+id/labelXp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XP Gained"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvXpPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/formScoreContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:background="@color/surface_dark_translucent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/labelFormQuality"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Form Quality"
                            android:textColor="@color/cyan"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iconZap"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_zap"
                                app:tint="@color/gold" />

                            <TextView
                                android:id="@+id/tvFormScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="0%"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Position yourself in frame"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        tools:text="Keep core engaged and drive knees out." />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressFormQuality"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="6dp"
                        app:indicatorColor="@color/cyan"
                        app:trackColor="@color/surface_dark"
                        app:trackCornerRadius="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recordingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_margin="12dp"
                    android:background="@color/error_red"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/tvAnalyzing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANALYZING"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- moved here so it stays above HUD -->
                <ImageButton
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_badge_cyan"
                    android:src="@drawable/ic_switch_camera"
                    android:contentDescription="Switch camera"
                    app:tint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- ì¹´ìš´íŠ¸ë‹¤ìš´ / STEP BACK ì¤‘ì•™ í…ìŠ¤íŠ¸ -->
                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- âœ… ìƒˆë¡œ ì¶”ê°€: REP íŒì—…ìš© ì¤‘ì•™ í…ìŠ¤íŠ¸ -->
                <TextView
                    android:id="@+id/tvRepPopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="72sp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible"
                    tools:text="5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartWorkout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:minHeight="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Begin Training"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/success_green"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="28dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
