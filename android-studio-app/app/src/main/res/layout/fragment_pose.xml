<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentPose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.fragments.PoseFragment">

    <!-- ===== Header ===== -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/gradient_overlay_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSystemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSE ESTIMATION"
                android:textColor="@color/cyan"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSystemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluate your pose"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/activityIconBox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_rect_shape"
            android:backgroundTint="@color/cyan_30"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="@android:color/white" />
        </FrameLayout>
    </LinearLayout>

    <!-- ===== ONE BIG CAMERA / RESULT CARD ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/cyan_30"
        app:strokeWidth="2dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/feedbackCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cameraCardRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ì¹´ë©”ë¼ / ê²°ê³¼ ì´ë¯¸ì§€ê°€ ë“¤ì–´ê°€ëŠ” ì˜ì—­ (3:4 ë¹„ìœ¨) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/previewWrapper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:keepScreenOn="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintDimensionRatio="H,3:4">

                <FrameLayout
                    android:id="@+id/cameraContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_camera_round_16"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:clipToPadding="true">

                    <!-- ë¼ì´ë¸Œ ì¹´ë©”ë¼ í”„ë¦¬ë·° -->
                    <androidx.camera.view.PreviewView
                        android:id="@+id/cameraPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:keepScreenOn="true" />

                    <!-- ì´¬ì˜/ì—…ë¡œë“œ í›„ í‘œì‹œë  ì •ì§€ ì´ë¯¸ì§€ -->
                    <ImageView
                        android:id="@+id/imgAnalysisResult"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <!-- ì´ˆê¸° ê°€ì´ë“œ í…ìŠ¤íŠ¸ (í”„ë¦¬ë·° ìœ„ì— ì˜¤ë²„ë ˆì´) -->
                    <TextView
                        android:id="@+id/tvGuideText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Take a picture or upload from gallery"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </FrameLayout>

                <!-- ì¹´ë©”ë¼ ì „í™˜ ë²„íŠ¼ (ì˜¤ë¥¸ìª½ ìœ„) -->
                <ImageButton
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_badge_cyan"
                    android:src="@drawable/ic_switch_camera"
                    android:contentDescription="Switch camera"
                    app:tint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- ì¹´ìš´íŠ¸ë‹¤ìš´ (ê°€ìš´ë°) -->
                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ì´¬ì˜ ë²„íŠ¼ (ì™¼ìª½ ì•„ëž˜) -->
            <ImageButton
                android:id="@+id/btnCapture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_badge_cyan"
                android:src="@drawable/ic_camera"
                app:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ì—…ë¡œë“œ ë²„íŠ¼ (ì˜¤ë¥¸ìª½ ì•„ëž˜, ê°¤ëŸ¬ë¦¬ì—ì„œ ì„ íƒ) -->
            <ImageButton
                android:id="@+id/btnUpload"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_badge_gold"
                android:src="@drawable/ic_upload"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== Feedback Section (ê¸°ì¡´ ê·¸ëŒ€ë¡œ) ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:backgroundTint="@color/surface_dark_translucent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvGoodPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Point:"
                android:textColor="@color/gold"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvImprovePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Needs Improvement:"
                android:textColor="@color/gold"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvCue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Cue:"
                android:textColor="@color/cyan_bright"
                android:textStyle="italic"
                android:textSize="13sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
